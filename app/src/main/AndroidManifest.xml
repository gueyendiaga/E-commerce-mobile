<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ecommerce">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ecommerce">
        <activity
            android:name=".activities.CartActivity"
            android:theme="@style/AppThemeFullScreenImage"
            android:exported="true" />
        <activity
            android:name=".activities.GestionProductActivity"
            android:theme="@style/AppThemeFullScreenImage"
            android:exported="true" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="true"
            android:theme="@style/AppThemeFullScreenImage" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:theme="@style/AppThemeFullScreenImage" />
        <activity
            android:name=".activities.AboutActivity"
            android:exported="true"
            android:theme="@style/AppThemeFullScreenImage" />
        <activity
            android:name=".activities.ProductCategoriesActivity"
            android:exported="true"
            android:theme="@style/AppThemeFullScreenImage" />
        <activity
            android:name=".activities.DetailProductActivity"
            android:exported="true"
            android:theme="@style/AppThemeFullScreenImage" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/AppThemeFullScreenImage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>